<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.studentmanagement.controller.WelcomeSceneController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@WelcomeScenePictures/welcomeSceneBackground.png" />
         </image>
      </ImageView>
      <Label layoutX="477.0" layoutY="292.0" text="Username:" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="477.0" layoutY="318.0" prefHeight="26.0" prefWidth="290.0" />
      <Label layoutX="477.0" layoutY="354.0" text="Password:" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="17.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="477.0" layoutY="382.0" prefHeight="26.0" prefWidth="290.0" />
      <Label layoutX="477.0" layoutY="421.0" text="Reference Code: " textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="17.0" />
         </font>
      </Label>
      <PasswordField fx:id="referenceField" layoutX="477.0" layoutY="449.0" prefHeight="26.0" prefWidth="290.0" />
      <ImageView fx:id="picture" fitHeight="119.0" fitWidth="106.0" layoutX="869.0" layoutY="320.0" pickOnBounds="true">
         <image>
            <Image url="@WelcomeScenePictures/defaultPhoto.png" />
         </image>
      </ImageView>
      <Label layoutX="831.0" layoutY="452.0" text="Select Picture" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="17.0" />
         </font>
      </Label>
      <Button fx:id="browseButton" layoutX="962.0" layoutY="450.0" mnemonicParsing="false" onAction="#browseButtonAction" text="Browse" />
      <ImageView fx:id="signUp" fitHeight="57.0" fitWidth="241.0" layoutX="497.0" layoutY="524.0" onMouseClicked="#signupAction" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@WelcomeScenePictures/sign%20up%20button.png" />
         </image>
      </ImageView>
      <Label fx:id="alertText" layoutX="443.0" layoutY="494.0" text="All informations hasn't been provided" textFill="RED">
         <font>
            <Font name="Arial Bold" size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
